{
  "basePath": "/testtom/multitenancy/v1",
  "paths": {
    "/tenants": {
      "post": {
        "summary": "Creates a new tenant",
        "x-swagger-router-controller": "Tenants",
        "produces": [
          "application/json"
        ],
        "description": "This method creates a new tenant",
        "operationId": "createTenant",
        "responses": {
          "201": {
            "schema": {
              "$ref": "#/definitions/TenantCreated"
            },
            "description": "Tenant created"
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Bad request"
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Internal server error"
          }
        },
        "parameters": [
          {
            "schema": {
              "$ref": "#/definitions/TenantCreate"
            },
            "in": "body",
            "name": "body",
            "description": "Tenant object that needs to be created in the application",
            "required": true
          }
        ],
        "tags": [
          "tenants"
        ],
        "consumes": [
          "application/json"
        ]
      },
      "get": {
        "summary": "Get all tenants",
        "x-swagger-router-controller": "Tenants",
        "produces": [
          "application/json"
        ],
        "description": "Get all tenants and tenantkey",
        "operationId": "getTenants",
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/TenantObject"
            },
            "description": "Success list of all tenants with tenant key"
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Internal server error"
          }
        },
        "parameters": [],
        "tags": [
          "tenants"
        ]
      }
    },
    "/tenants/{tenantid}": {
      "get": {
        "summary": "Get tenant details",
        "x-swagger-router-controller": "Tenants",
        "produces": [
          "application/json"
        ],
        "description": "get tenant config",
        "operationId": "getTenant",
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/definitions/TenantCreateWithId"
            },
            "description": "Tenant and config"
          },
          "400": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Bad request"
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Tenant not found"
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Internal server error"
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "tenantid",
            "description": "id of tenant we want to look up",
            "type": "string",
            "required": true
          }
        ],
        "tags": [
          "tenants"
        ]
      },
      "delete": {
        "summary": "Delete a tenant",
        "x-swagger-router-controller": "Tenants",
        "description": "Tis call can soft or hard delete a tenant",
        "operationId": "deleteTenant",
        "responses": {
          "204": {
            "description": "No content the tenant has been disabled or deleted"
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Not found"
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Internal server error"
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "tenantid",
            "description": "id of tenant we want to delete",
            "type": "string",
            "required": true
          },
          {
            "in": "query",
            "name": "is-hard",
            "description": "type of delete, set true for hard delete",
            "type": "boolean",
            "required": false
          }
        ],
        "tags": [
          "tenants"
        ]
      },
      "put": {
        "summary": "Update the tenant details",
        "x-swagger-router-controller": "Tenants",
        "produces": [
          "application/json"
        ],
        "description": "Update the tenant details",
        "operationId": "putTenant",
        "responses": {
          "204": {
            "description": "No content"
          },
          "404": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Tenant not found"
          },
          "500": {
            "schema": {
              "$ref": "#/definitions/ErrorModel"
            },
            "description": "Internal server error"
          }
        },
        "parameters": [
          {
            "in": "path",
            "name": "tenantid",
            "description": "id of tenant we want to update",
            "type": "string",
            "required": true
          },
          {
            "schema": {
              "$ref": "#/definitions/TenantCreate"
            },
            "in": "body",
            "name": "body",
            "description": "Pet object that needs to be added to the store",
            "required": true
          }
        ],
        "tags": [
          "tenants"
        ]
      }
    }
  },
  "host": "api-gw-o.antwerpen.be",
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  },
  "schemes": [
    "https"
  ],
  "definitions": {
    "TenantCreate": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "config": {
          "$ref": "#/definitions/TenantConfig"
        }
      },
      "example": {
        "name": "name",
        "config": {
          "size": "150mb"
        }
      }
    },
    "Tenants": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/TenantBasic"
      }
    },
    "TenantBasic": {
      "type": "object",
      "required": [
        "name",
        "tenantId",
        "isDeleted"
      ],
      "properties": {
        "isDeleted": {
          "type": "boolean"
        },
        "tenantId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "example": {
        "name": "OCMW",
        "tenantId": "2f3c31b0-8b80-44e9-bb0a-8a126eac8570",
        "isDeleted": true
      }
    },
    "TenantCreateWithId": {
      "type": "object",
      "required": [
        "name"
      ],
      "properties": {
        "isDeleted": {
          "description": "soft deleted tenants will have this property set to true",
          "type": "boolean"
        },
        "name": {
          "description": "friendly name of tenant",
          "type": "string"
        },
        "tenantId": {
          "description": "tenant id",
          "type": "string"
        },
        "config": {
          "$ref": "#/definitions/TenantConfig"
        }
      }
    },
    "TenantObject": {
      "type": "object",
      "properties": {
        "tenants": {
          "$ref": "#/definitions/Tenants"
        }
      }
    },
    "TenantConfig": {
      "type": "object",
      "properties": {
        "size": {
          "type": "string"
        }
      },
      "example": {
        "size": "150mb"
      }
    },
    "ErrorModel": {
      "type": "object",
      "properties": {
        "identifier": {
          "format": "uuid",
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "status": {
          "format": "int32",
          "type": "integer"
        }
      }
    },
    "TenantCreated": {
      "type": "object",
      "required": [
        "tenantid"
      ],
      "properties": {
        "tenantid": {
          "type": "string"
        }
      },
      "example": {
        "tenantid": "tenantid"
      }
    }
  },
  "swagger": "2.0",
  "info": {
    "contact": {
      "email": "tom.dierckx@digipolis.be"
    },
    "description": "Multi-tenant demo application",
    "title": "Multi-tenant Demo API",
    "version": "1.0.1"
  },
  "tags": [
    {
      "name": "tenants",
      "description": "Global tenant config. This should be published in the admin REST interface of the API."
    },
    {
      "name": "business",
      "description": "Demo business endpoint. All calls with this tag are actions inside a tenant"
    },
    {
      "name": "status",
      "description": "All status related info"
    }
  ]
}